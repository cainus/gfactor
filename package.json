{
  "name": "gfactor",
  "displayName": "GFactor",
  "description": "AI-powered codebase migration tool for large-scale refactoring",
  "version": "0.0.1",
  "publisher": "cainus",
  "icon": "resources/gfactor-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cainus/gfactor"
  },
  "engines": {
    "vscode": "^1.100.0",
    "node": ">=18.18.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:gfactor.startRefactor",
    "onCommand:gfactor.configureApiKeys",
    "onCommand:gfactor.showBurndownChart"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gfactor.startRefactor",
        "title": "GFactor: Start Code Migration"
      },
      {
        "command": "gfactor.configureApiKeys",
        "title": "GFactor: Configure API Keys"
      },
      {
        "command": "gfactor.showBurndownChart",
        "title": "GFactor: Show Pattern Burndown Chart"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gfactor-sidebar",
          "title": "GFactor",
          "icon": "$(symbol-function)"
        }
      ]
    },
    "views": {
      "gfactor-sidebar": [
        {
          "id": "gfactorView",
          "name": "AI Migration Assistant",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "GFactor",
      "properties": {
        "gfactor.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Claude CLI (not used directly, but kept for backward compatibility)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "keywords": [
    "vscode",
    "extension",
    "refactoring",
    "migration",
    "ai",
    "code-migration"
  ],
  "author": "Gregg Caines",
  "license": "MIT",
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.30",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "glob": "^10.4.5",
    "markdown-it": "^14.1.0"
  }
}
